<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SettingsActivity">

    <!-- New: App Logo / Image -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="131dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="HabitNow Logo"
        android:src="@drawable/habitnow" />

    <!-- New: App Name Heading -->
    <TextView
        android:id="@+id/appHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:text="HabitMate"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"/>

    <!-- Main Content Area: Title now sits below the app heading -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appHeading"
        android:text="Application Settings"
        android:textSize="22sp"

        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/settingsSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:text="Manage your account preferences and notifications here."
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textSize="16sp"/>


    <!-- 1. Theme Switch (Left Aligned) -->
    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsSubtitle"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        android:text="Enable Dark Mode"
        android:textSize="18sp" />

    <!-- 2. Switch Language (Feature Coming Soon) -->
    <TextView
        android:id="@+id/languageSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/themeSwitch"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="12dp"
        android:text="Switch Language (feature coming soon)"
        android:textSize="18sp"
        android:textColor="#616161"/> <!-- Dark Gray for non-actionable text -->

    <!-- 3. Export Data (Actionable Green) -->
    <Button
        android:id="@+id/exportDataSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/languageSetting"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingVertical="14dp"
        android:text="Export Data"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:elevation="4dp" />


    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:background="#F0F0F0">


    <!-- Home Nav Button: Inactive - Dark Gray Text -->
        <Button
            android:id="@+id/homeNavBtn"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#616161"
            android:backgroundTint="@android:color/transparent"/>

        <!-- Progress Nav Button: Inactive - Dark Gray Text -->
        <Button
            android:id="@+id/progressNavBtn"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Progress"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#616161"
            android:backgroundTint="@android:color/transparent"/>

        <!-- Settings Nav Button: Active - Earthy Brown Text -->
        <Button
            android:id="@+id/settingsNavBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#795548"
            android:textSize="10sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>