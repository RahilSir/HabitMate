<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <!-- App Logo / Image -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="131dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/habitnow" />

    <!-- App Name Heading -->
    <TextView
        android:id="@+id/appHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"/>

    <!-- Main Content Area -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appHeading"
        android:text="@string/settings_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/settingsSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsTitle"
        android:text="@string/settings_subtitle"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textSize="16sp"/>

    <!-- 1. Theme Switch -->
    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsSubtitle"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="12dp"
        android:text="@string/dark_mode"
        android:textSize="18sp" />

    <!-- 2. Language Switch Button -->
    <Button
        android:id="@+id/switchLanguageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/themeSwitch"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:padding="16dp"
        android:backgroundTint="#795548"
        android:text="@string/switch_language"
        android:textSize="18sp" />

    <!-- 3. Export Data Button -->
    <Button
        android:id="@+id/exportDataSetting"
        android:layout_width="400dp"
        android:layout_height="67dp"
        android:layout_below="@id/switchLanguageBtn"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#4CAF50"
        android:elevation="4dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="14dp"
        android:text="@string/export_data"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:background="#F0F0F0">

        <!-- Home Nav Button -->
        <Button
            android:id="@+id/homeNavBtn"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_home"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#616161"
            android:backgroundTint="@android:color/transparent"/>

        <!-- Progress Nav Button -->
        <Button
            android:id="@+id/progressNavBtn"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_progress"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#616161"
            android:backgroundTint="@android:color/transparent"/>

        <!-- Settings Nav Button -->
        <Button
            android:id="@+id/settingsNavBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#795548"
            android:textSize="10sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>